
mixin input(params={})
  //- 공통 요소 Start
  - const prefix = "mui"
  - const divide = '_'
  //- 공통 요소 End

  - const { element="span", className, title, placeholder, id, type="text", ...rest } = Object.assign({}, params)
  #{element}(
    class=`${prefix}${divide}input`
    class=className
  )
    input(
      type=type
      id=id
      title=title
      placeholder=placeholder
    )

