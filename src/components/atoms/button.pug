mixin button_group(params={})
  //- 공통 요소 Start
  - const prefix = "mui"
  - const divide = '_'
  //- 공통 요소 End
  - const { element="div", size="medium", className, btns, ...rest } = Object.assign({}, params)
  #{element}(
    id=id
    class=`${prefix}${divide}button${divide}group`
    class=className
  )
    each val in btns
      span.group
        +button({
          label:val
        })


mixin button(params={})
  //- 공통 요소 Start
  - const prefix = "mui"
  - const divide = '_'
  //- 공통 요소 End
  

  - let element = "button"
  - let buttonType = "button"
  - const { size="medium", label, isIcon, href, muiToggle, className, id, ...rest } = Object.assign({}, params)
  - let test = "mui"
  if href
    - element = "a"
    - buttonType = undefined
  #{element}(
    id=id
    class=`${prefix}${divide}button`
    class=`${prefix}${divide}${size}`
    class=className
    class={
      'mui-icon':isIcon,
    }
    type=buttonType
    href=href
    mui-toggle=muiToggle
  )
    span
      | #{label}

