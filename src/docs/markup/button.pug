extends ../layout/guideBase.pug

block content
  div.main_content
    +guideTitle({
      text:"Button"
    })
    +guideTitle({
      text:"Example",
      level:2
    })
    +guideExample()(code)
      :code
        +button({
          label:"버튼",
          size:'large',
        })
        +button({
          label:"버튼",
          size:'medium',
        })
        +button({
          label:"버튼",
          size:'small',
        })
    br
    br

    +guideTitle({
      text:"Button Group",
      level:2
    })
    +guideExample()(code)
      :code
        // 최근, 자주, 내계좌 선택 버튼
        +button_group({
          btns:[
            '최근',
            '자주',
            '내계좌',
          ]
        })
    +guideExample()(code)
      :code
        
        // 금액 입력 버튼 그룹
        +button_group({
          btns:[
            '+1만',
            '+5만',
            '+10만',
            '전액',
          ]
        })
    br
    br
    +guideTitle({
      text:"Attribute",
      level:2
    })

    +attributesLists([
      [
        {
          text:'label'
        },
        {
          text:'버튼 텍스트'
        },
        {
          text:'string'
        },
        {
          text:'-'
        }
      ],
      [
        {
          text:'size'
        },
        {
          text:'버튼 사이즈 : large, medium, small'
        },
        {
          text:'string'
        },
        {
          text:'medium'
        }
      ],
      [
        {
          text:'isIcon'
        },
        {
          text:'아이콘 포함 여부'
        },
        {
          text:'Boolean'
        },
        {
          text:'false'
        }
      ]
    ])



