block prepend top 
  - mainClassName="webauc"
  - pageTitle = "자동이체(CMS) 등록"

block content
  +content_group(0)
    
    +result({
      type:'result',
      mainText:"자동이체 신청이<br>완료되었습니다.",
      img:"/src/images/ico_finish.svg",
    })
  +content_group(0)
    +result({
      dataType:"line",
      data:[
        {
          title:"출금계좌",
          text:"중앙저축은행<br>01234567890123",
        },
        {
          title:"입금계좌",
