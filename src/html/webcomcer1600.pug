extends ../components/templates/base.pug


block prepend top 
  - pageTitle = "본인확인이용 동의";

block content
  +modal({
    title:"본인확인이용 동의",
    id:"fullLayer",
    type:"full",
    isDownBtn:true,
  })
    .agreement
      +content_group(1)
        p 저축은행중앙회(이하 '당 회')는 ‘개인정보보호법’ 및 ‘정보통신망 이용촉진 및 정보보호 등에 관한 법률’에 따라 이용자의 개인정보 보호 및 권익을 보호하고 개인정보와 관련한 이용자의 고충을 원활하게 처리할 수 있도록 다음과 같은 개인정보처리방침을 두고 있습니다.

      +content_group(1)
        +title({
          text:"제 1조 개인정보의 처리 목적",
          lv:5,
        })
        p 
          strong 당 회는 개인정보를 다음의 목적을 위해 처리합니다.<br>처리한 개인정보는 다음의 목적 이외의 용도로는 사용되지 않으며 이용 목적이 변경될 시에는 사전 동의를 구할 예정입니다.

        .mui_text_lists.circle_num
          ul
            li 금융거래 관계 관련
              ul.depth_01 
                li 금융거래와 관련된 본인확인
                li 금융거래와 관련하여 신용조회회사 또는 신용정보집중기관에 대한 개인신용정보의 조회, 금융거래 관계의 설정·유지·이행·관리
                li 금융사고 조사, 분쟁 해결, 민원 처리 및 법령상 의무이행 등
                li 온라인 거래와 관련하여 전자금융거래법 제21조, 제22조에 의해 전자금융거래의 내용 추적 및 검색, 보안정책 수립용 통계 자료로의 활용
                  +text({
                    type:'warning',
                    text:"금융거래라 함은 여신, 수신, 내·외국환, 체크카드 등과 관련된 거래를 의미합니다."
                  })
                li 부당 대출모집행위 신고
                li 저축은행 관련 민원 신고
                li 저축은행 메일링 서비스 제공
                li 저축은행지 배송
                li 직원광장 홈페이지 회원 관리
                li 저축은행 광고심의시스템 회원 관리
                li 관계 법령에서 동의 없이 수집·이용할 수 있도록 정해진 경우

      +content_group(1)
        +title({
          text:"제2조 개인정보 보유 현황 및 수집방법",
