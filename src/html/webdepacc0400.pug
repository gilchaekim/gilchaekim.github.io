extends ../components/templates/base.pug

block prepend top 
  - mainClassName="webdep"
  - pageTitle = "상품가입"

block content
  +content_group(0)
    +stepNum({
      total:4,
      activeIndex:3
    })
  +content_group(0)
    +title({
      text:"전자금융 신청",
      lv:2,
    })
  +content_group(2)
    +title({
      text:"3.뱅킹등록",
      lv:4,
    })
  +content_group(2)
    +form()
      +form_body({title:"뱅킹ID"})
        +input_button({
          btnText:"중복확인",
          placeholder:"6~12자리 입력",
          type:"input"
        })
        +text({
          type:'warning',
          text:"뱅킹ID는 영문 소문자 또는 숫자를 사용하여 6~12자리를 입력해 주세요.(첫자리는 영문자로 시작해주세요.)"
        })
      +form_body({title:"뱅킹비밀번호"})
        +input({
          placeholder:"8~12자리 입력",
          type:"password"
        })
      +form_body({title:"뱅킹비밀번호 확인"})
        +input({
          placeholder:"8~12자리 입력",
          type:"password"
        })
        +text({
          type:'warning',
          text:"문자, 숫자, 특수문자(~제외)의 조합으로 8~12자리로 입력해 주세요."
        })
  +collapse({
    className:"guide_text",
    isOpen:true,
  })
    +header()
      p.title 알아두세요
    +content()
      +textLists({
        type:'guide',
        lists:[
          {
            text:"예금의 해지는 해당 저축은행의 인터넷뱅킹 또는 SB+에서 가능합니다.",
          },
        ]
      })

  +button_bottom_fixed()
    +button({
      label:"다음",
      size:"large",
    })
