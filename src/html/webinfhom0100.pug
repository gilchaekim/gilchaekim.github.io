extends ../components/templates/base.pug

block prepend top 
  - mainClassName="webinf"
  - pageTitle = "주택담보대출"

block content
  .bank_products
    +content_group(0)   
      +title({
        text:"<em>주택담보대출</em>",
        lv:1,
      })
      p.sub_txt 모바일로 간편하게 신청하는 주택담보대출
      .detail
        .list 
          dl 
            dt 금리
            dd 3.05% ~ 6.5%
        .list 
          dl 
            dt 최대한도
            dd 5억원
        .list 
          dl 
            dt 최대기간
            dd 45년
        .img 
          img(src="/src/images/img_prd.png", alt="주택담보대출 상품 이미지")
      button.btn_arrow
        span.calc_txt 나의 대출 이자는?
          strong 계산해보기
        
    hr
    +content_group(0)
      +accordion({
        active:0
      })
        +acc_title('상품안내')
        +acc_content()
          .product_data   
            p.title 상품내용
            p.text 모바일로 신청하는 주택담보대출
            p.title 대출대상
            p.text 만 19세 이상 내국인, 재직중인 근로소득자
            p.title.small 주택구입자금
            p.text.dot (세대합산)무주택 또는 1주택 세대
            p.text.dot 매매계약을 체결하고 수유권 이전이 완료되지 않은 경우 신청 가능
            p.text.dot 무주택세대라도 주택담보대출을 보유한 경우 신청 불가
            p.title.small 생활안정자금
            p.text.dot (세대합산) 1주택 세대
            p.text.dot 담보주택의 소유권 이전이 3개월 경과한 경우 신청 가능
            p.text.dot 등기권리증 소유자
            p.text.dot 다른 금융기관의 주택담보대출을 보유한 경우 신청 불가
            p.title 대상주택
            p.text 아파트, 일반주택, 다세대/다가구, 연립주택, 상가
            p.title 대출한도
            p.text 최대 5억원
            p.title 대출기간
            p.text 15년 ~ 45년
            p.title 상환방법
            p.text 원리금균등분할상환방식

        +acc_title('금리정보')
        +acc_content()
          .product_data   
            p.title 대출금리
            p.text 연 3.05%~6.05%
            p.title 연체이율
            p.text 대출금리 + 연3%
            p.title 상환방법
            p.text 원리금균등분할상환방식
            p.title 중도상환 수수료
            p.text 중도상환원금×수수료율(1.2%)×잔존일수÷대출기간

        +acc_title('유의사항')
        +acc_content()
          .product_data   
            p.title 유의사항이 있나요??
            p.text 유의사항이 있나요??
        +acc_title('약관 및 상품설명서')
        +acc_content()
          +button_wrap()
            +button({
              label:"여신거래 기본약관",
              size:"medium",
              type:"white",
            })
          +button_wrap()
            +button({
              label:"주택담보대출 상품설명서",
              size:"medium",
              type:"white",
            })
    p.low_txt 준법감시인 심의필 제21022호<br>(2021.09.24~2022.09.23)

    +content_group(0)
      +button_wrap()
        +button({
          label:"온라인 서류제출",
          size:"medium",
          type:"white",
        })

  +button_bottom_fixed()
    +button({
      label:"신청하기",
      size:"large",
    })
