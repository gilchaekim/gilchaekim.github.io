extends ../components/templates/base.pug

block prepend top 
  - mainClassName="webiba"
  - pageTitle = "최초뱅킹비밀번호등록"

block content
  +form()
    +form_body({title:"뱅킹 아이디"})
      +input({
        placeholder:"아이디 입력",
      })
      +text({
        type:'link',
        className:"em",
        text:"아이디 찾기"
      })

    +form_body({title:"초기 비밀번호"})
      +input({
        type:"password",
        placeholder:"창구에서 등록한 6자리 비밀번호",
      })
    +form_body({title:"주민번호/사업자등록번호"})
      +radioCheck({
        type:"radio",
        name:'chk353339',
        lists:[
          {label:'개인고객',},
          {label:'법인 (기업) 고객',},
        ]
      })
      +input({
        placeholder:"생년월일 6자리",
      })
      +input_business()
    +form_body({title:"인증방법"})
      +radioCheck({
        type:"radio",
        name:'chk842713',
        lists:[
          {label:'보안매체(보안카드/OTP/모바일OTP)',},
          {label:'ARS인증',},
        ]
      })
  +collapse({
    className:"guide_text",
    isOpen:true,
  })
    +header()
      p.title 알아두세요
    +content()
      +textLists({
        type:'guide',
        lists:[
          {
            text:"사용자아이디/초기비밀번호는 창구에서 등록한 정보를 입력해 주세요.",
          },
          {
            text:"비밀번호는 아래의 규칙가이드를 참고해주시기 바랍니다.",
            subLists:{
              type:'hyphhen',
              lists:[
                {
                  text:"영문자, 숫자, 특수문자가 혼용되어 최소 8자, 최대12자 이내로 작성되어야 합니다."
                },
                {
                  text:"아이디와 4자리 이상 일치하는 비밀번호는 사용이 불가합니다.",
                },
                {
                  text:"고객정보(주민번호, 휴대폰번호, 전화번호 등)과 4자리 이상 일치하는 비밀번호는 사용이 불가합니다."
                },
              ]
            }
          },
        ]
      })
  +button_bottom_fixed()
    +button({
      label:"다음",
      size:"large",
      type:"primary",
    })