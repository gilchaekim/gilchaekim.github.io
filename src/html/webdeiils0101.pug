extends ../components/templates/base.pug

block prepend top 
  - mainClassName="webdep"
  - pageTitle = "금융계산기"

block content
  +tabsLink({
    list:[		
      {name:"예금이자"},
      {name:"적금이자", active:true},
      {name:"대출이자"},
    ],
    className:"custom_tab"
  })
    +content_group(2)
      +form()
        +form_body({title:"적금금리"})
          +input({
            placeholder:"숫자만 입력",
            subfix:"%",
          })
        +form_body({title:"월납입액"})
          +input_money({btns:["+10만","+50만","+100만","+500만",], guideMoney:true})
        +form_body({title:"납입개월"})
          +input({
            placeholder:"숫자만 입력",
            subfix:"개월",
          })
      +content_group(1)
        +button({
          label:"계산하기",
          size:"medium",
          type:"white",
        })
    hr
    div.calc_result
      +title({
        text:"계산결괴",
        lv:4,
      })
      +accordion({
        active:0,
        className:'type2'
      })
        +acc_title('일반과세(15.4%)')
        +acc_content()
          +result({
            dataType:"default",
            className:"greybox",
            data:[
              {
                title:"월납입액 합계(원)",
                text:"10,000,000원",
              },
              {
                title:"이자(세전)",
                text:"10,000,000원",
              },
              {
                title:"이자(세후)",
                text:"10,000,000원",
              },
              {
                title:"만기지급액",
                text:"10,000,000원",
              },
            ]
          })
        +acc_title('비과세(0%)')
        +acc_content()
          +result({
            className:"greybox",
            data:[
              {
                title:"월납입액 합계(원)",
                text:"10,000,000원",
              },
              {
                title:"이자(세전)",
                text:"10,000,000원",
              },
              {
                title:"이자(세후)",
                text:"10,000,000원",
              },
              {
                title:"만기지급액",
                text:"10,000,000원",
              },
            ]
          })
      +collapse({
        className:"guide_text",
        isOpen:true,
      })
        +header()
          p.title 알아두세요
        +content()
          +textLists({
            type:'guide',
            lists:[
              {
                text:"일반과세는 이자금액의 15.4%가 원천징수 됩니다.",
              },
              {
                text:"비과세 종합저축(가입대상자에 한해 5천만원 한도, 기존 세금우대종합저축, 생계형 저축 한도 포함, 통합한도로 운용)<br>단, 관련세법 변경으로 인한 세율변동의 경우에는 변경된 세율이 적용됩니다.",
              },
              {
                text:"상기금액은 실제 상품 적용시에 다소 차이가 있을 수 있으므로 참고용으로 확인 하시기 바랍니다.",
              },
            ]
          })