extends ../components/templates/base.pug

block content
  +button({
    label:"추가인증 선택",
    muiToggle:'target:#fullLayer;'
  })
  +modal({
    title:"추가인증 선택",
    id:"fullLayer",
    type:"full"
  })
    +tabsWrap({
      active:0,
      className:""
    })
      +tab("ARS 인증")
        .ars_mobile
          <!-- case 1 --> 
          div
            +content_group(0)
              .top
                .img 
                  img(src="/src/images/ico_ars.png", alt="")
                .text ARS 인증
            +content_group(0)
              +title({
                text:"전화번호 선택",
                lv:4,
              })
              +button_select({
                label:"010-1234-****",
              })
              +button_select({
                label:"010-1234-****",
                className:"arrow_hidden"
              })
              .support
                a(href="") 전화번호가 변경되었나요?
              
            +content_group(0)
              +title({
                text:"ARS(전화승인)",
                lv:4,
              })
              p.text 고객님의 전화번호로 ARS를 연결하여 인증받는 방법입니다.
            +collapse({
              className:"guide_text",
              isOpen:true,
            })
              +header()
                p.title 알아두세요
              +content()
                +textLists({
                  type:'guide',
                  lists:[
                    {text:"이용요금은 무료입니다."},
                    {text:"단, 해외로밍 시 이용료를 추가 부담합니다."},
                  ]
                })
          <!-- case 2 --> 
          div      
            p.main_title 
              | 전화안내에 따라
              br
              | ARS인증을 진행해주세요.
            .ars_number
              span 2
              span 7
            
            ul.guide_inline
              li!="1. 수신되는 ARS전화에서 위 인증번호를 입력해주세요"
              li!="2. ARS 통화종료 후 해당 화면의 <em>'확인'</em> 버튼을 누르셔야 인증이 완료됩니다."
            +text({
              type:'warning',
              text:"단, 통신사 부가서비스나 수신거절 처리된 경우 전화수신이 안 될 수 있습니다."
            })              
              
        +button_bottom_fixed()
          +button({
            label:"ARS 요청",
            size:"large",
          })
      +tab("스마트앱 인증")
        .ars_mobile
          .top
            .img 
              img(src="/src/images/ico_smart.png", alt="")
            .text 스마트앱 인증
          .smart_conf 
            p!="스마트앱 인증을 SB톡톡 앱에서 진행합니다."
            p!="스마트앱 인증 버튼을 누르시고, SB톡톡 <br> 앱을 확인해 주세요."
            +button_custom({
              type:"round-40",
              label:"스마트앱 인증"
            })
        div 스마트인증 모듈 호출
  script.
    GCui.modal('#fullLayer').show()