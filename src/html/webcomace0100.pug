extends ../components/templates/base.pug

block content
  +button({
    label:"추가인증 선택",
    muiToggle:'target:#fullLayer;'
  })
  +modal({
    title:"추가인증 선택",
    id:"fullLayer",
    type:"full"
  })
    +tabsLink({
      list:[		
        {name:"ARS 인증", active:true},
        {name:"스마트앱 인증"},
      ],
      className:"custom_tab"
    })
      .ars_mobile
        +content_group(0)
          .top
            .img 
              img(src="/src/images/ico_ars.png", alt="")
            .text ARS 인증
        +content_group(0)
          +title({
            text:"전화번호 선택",
            lv:4,
          })
          +button_select({
            label:"010-1234-****",
          })
          +button_select({
            label:"010-1234-****",
            className:"arrow_hidden"
          })
          .support
            a(href="") 전화번호가 변경되었나요?
          
        +content_group(0)
          +title({
            text:"ARS(전화승인)",
            lv:4,
          })
          p.text 고객님의 전화번호로 ARS를 연결하여 인증받는 방법입니다.
        +collapse({
          className:"guide_text",
          isOpen:true,
        })
          +header()
            p.title 알아두세요
          +content()
            +textLists({
              type:'dot',
              lists:[
                {text:"이용요금은 무료입니다."},
                {text:"단, 해외로밍 시 이용료를 추가 부담합니다."},
              ]
            })
        
      +button_bottom_fixed()
        +button({
          label:"ARS 요청",
          size:"large",
        })
  script.
    GCui.modal('#fullLayer').show()