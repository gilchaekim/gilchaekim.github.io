extends ../components/templates/base.pug

block prepend top 
  - mainClassName="webinf"
  - pageTitle = "신용대출/사잇돌"

block content
  +stepNum({
    total:5,
    activeIndex:2
  })
  +content_group(1)
    +title({
      text:'신청정보 입력',
      lv:2,
    })
  +content_group(2)
    +title({
      text:'1. 대출신청정보',
      lv:4,
    })
  
  +content_group(2)
    .bank_product_details.long_type
      +title({
        text:"<em>직장인 신용대출</em>",
        lv:1,
      })
      p.sub_txt 재직중인 직장인을 위한 신용대출
      .detail
        .list 
          dl 
            dt 금리
            dd 연 1.3%
        .img 
          img(src="/src/images/img_prd.png", alt="보통예금 상품 이미지")
    +card({
      data: [
          {
            title:"이름",
            text:"김저축",
          },
          {
            title:"휴대폰번호",
            text:"010-1234-5678",
          },
          {
            title:"주소",
            text:"[04130]서울 마포구 공덕공<br>168 11층",
          },
        ]
    })
      +button_custom({
        type:"gray-32",
        label:"주소변경"
      })
    +card({
      data: [
          {
            title:"대출가능한도",
            text:"<em><strong>3,000만원</strong></em>",
          }
        ]
    })
    hr

    +content_group(0)
      +form()
        +form_body({title:"대출신청금액", message:{type:"error", text:"대출 최소신청금액은 10만원입니다."}})
          +input({
            placeholder:"숫자만 입력",
            subfix:"원"
          })
          .money_support
            strong 1,000만 원
          +button_group({
            className:"btn_money",
            btns:[
              '+1만',
              '+10만',
              '+100만',
              '+1000만',
            ]
          })
      +text({
        type:'warning',
        text:"대출신청금액은 최대 1억원입니다."
      })
      +form()
        +form_body({title:"거래유형"})
          +radioCheck({
            name:'btnType',
            type:"radio",
            className:'button_type',
            lists:[
              {
                label:'전체',
                checked:true
              },
              {
                label:'입금'
              },
              {
                label:'출금'
              }
            ]
          })
        +form_body({title:"입금은행"})
          +button_select({
            placeholder:"은행 선택",
          })
        +form_body({title:"대출금 입금계좌번호"})
          +input_button({
            btnText:"계좌확인",
            placeholder:"계좌번호 입력",
          })
      +text({
        type:'warning',
        text:"기업은행 평생계좌번호(휴대폰번호로 구성된 계좌번호)는 입금계좌로 이용이 불가합니다."
      })

  +button_bottom_fixed()
    +button({
      label:"다음",
      size:"large",
      type:"primary",
      disabled:"disabled"
    })