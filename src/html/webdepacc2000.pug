extends ../components/templates/base.pug

block content
  +button({
    label:"클릭!",
    muiToggle:'target:#fullLayer;'
  })
  +modal({
    title:"비과세 안내 ",
    id:"fullLayer",
    type:"bottom",
  })
    +content_group(1)
      +title({
        text:"가입방법",
        lv:4,
      })
      +content_group(4)
        +text({
          text:"뱅킹가입 후, 로그인하여 비과세증빙자료제출 신청 및 완료 절차가 필요합니다."
        })
    +content_group(1)
      +title({
        text:"신청절자",
        lv:4,
      })

      +content_group(3)
