extends ../components/templates/base.pug

block prepend top 
  - pageTitle = "뱅킹비밀번호 변경"

block content
  +form()
    +form_body({title:"현재 비밀번호"})
      +input({
        type:"password",
        placeholder:"비밀번호 입력",
      })
    +form_body({title:"변경 비밀번호"})
      +input({
        type:"password",
        placeholder:"변경 비밀번호 입력",
      })
      +input({
        type:"password",
        placeholder:"변경 비밀번호 확인",
      })  
  +collapse({
    className:"guide_text",
    isOpen:true,
  })
    +header()
      p.title 알아두세요
    +content()
      +textLists({
        type:'guide',
        lists:[
          {
            text:"비밀번호는 아래의 규칙가이드를 참고해주시기 바랍니다.",
            subLists:{
              type:'hyphhen',
              lists:[
                {
                  text:"영문자, 숫자, 특수문자가 혼용되어 최소 8자, 최대 12자 이내로 작성되어야 합니다."
                },
                {
                  text:"아이디와 4자리 이상 일치하는 비밀번호는 사용이 불가합니다.",
                },
                {
                  text:"고객정보(주민번호, 휴대폰번호, 전화번호 등)과 4자리 이상 일치하는 비밀번호는 사용이 불가합니다."
                },
              ]
            }
          },
        ]
      })
  +button_bottom_fixed()
    +button({
      label:"다음",
      size:"large",
    })
