extends ../components/templates/base.pug


block prepend top 

block content
  +button({
    label:"계좌별칭수정 팝업호출",
    muiToggle:'target:#modal_bottom;'
  })

  +modal({
    title:"거래중지계좌 안내",
    id:"modal_bottom",
    type:"bottom",
    isCloseBtn:false,
    className:"webcus"
  })
    +title({
      text:"거래중지계좌란?",
      lv:4,
    })
    +content_group(2)
      .info_wrap
        .info_txt 대포통장 발생요인의 사전적 차단을 위하여「거래중지계좌 제도」가 시행됨에따라 고객님께서 보유하신 입출금이 자유로운 예금 중 아래 요건에 해당되는 경우 '거래중지계좌'로 관리되어 입출금거래 등이 제한될 수 있습니다.
    
      +title({
        text:"거래중지계좌가 적용되는 경우",
        lv:4,
      })
      +textLists({
        type:'dot',
        lists:[
          {
            text:"예금잔액이 1만원 미만이며, 1년이상 입출금거래가 업는 계좌",
          },
          {
            text:"예금잔액이 1만원 이상 5만원 미만이며, 2년 이상 입출금거래가 없는 계좌",
          },
          {
            text:"예금잔액이 5만원 이상 10만원 미만이며, 3년 이상 입출금거래가 없는 계좌",
          },
        ]
      })

    +button_bottom_fixed()
      +button({
        label:"확인",
        size:"large",
      })

  script.
    GCui.modal('#modal_bottom').show()