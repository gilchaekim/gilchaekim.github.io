          +button_bottom_fixed()
            +button({
              label:"이전",
              type:"default",
              size:"large",
            })
            +button({
              label:"다음",
              size:"large",
            })
        .step_cont(
          style="display:none;"
        )
          +title({
            text:"Q5.<br>귀하의 부채는 어느 정도입니까?",
            lv:2,
          })
          +form()
            +form_body()
              +radioCheck({
                type:"radio",
                name:'chk0769163',
                lists:[
                  {label:'1천만원 미만'},
                  {label:'1천만원 이상 1억원 미만'},
                  {label:'1억원 이상'},
                ]
              })
          +button_bottom_fixed()
            +button({
              label:"이전",
              type:"default",
              size:"large",
            })
            +button({
              label:"다음",
              size:"large",
            })
        .step_cont(
          style="display:none;"
        )
          +title({
            text:"Q6.<br>귀하의 신용점수는 어떻게 되십니까?",
            lv:2,
          })
          +form()
            +form_body()
              +radioCheck({
                type:"radio",
                name:'chk0769163',
                lists:[
                  {label:'600점 이하'},
                  {label:'600점 초과'},
                  {label:'모름'},
                ]
              })
          +button_bottom_fixed()
            +button({
              label:"이전",
              type:"default",
              size:"large",
            })
            +button({
              label:"다음",
              size:"large",
            })
        .step_cont(
          style="display:none;"
        )
          +title({
            text:"Q7.<br>귀하의 체결할 대출금의 변제방법은 무엇입니까?",
            lv:2,
          })
          +form()
            +form_body()
              +radioCheck({
                type:"radio",
                name:'chk0769164',
                lists:[
                  {label:'근로소득'},
                  {label:'사업소득'},
                  {label:'임대소득'},
                  {label:'연금소득'},
                  {label:'기타'},
                ]
              })
              +input({
                placeholder:"기타 선택 시 입력해 주세요"
