extends ../components/templates/base.pug

block content
  +button({
    label:"적합성/적정성 확인서",
    muiToggle:'target:#fullLayer;'
  })
  +modal({ 
    title:"적합성/적정성 확인서",
    id:"fullLayer",
    type:"full"
  })
    .suitability_step
      .step_nav
        ul 
          li.step
            span 1
          li.step.mui_active
            span 2
          li.step
            span 3
      .step_layer 
        .step_cont(
          style="display:none;"
        )
          +title({
            text:"안녕하세요 <em>홍길동</em>님",
            lv:2,
          })
          p.type1 대출계약자 적합성·적정성 확인을 위해 고객 정보를 입력해주세요.
          .box 
            .img 
              img(src="/src/images/img_com01.svg", alt="")
            +title({
              text:"적합성/적정성 확인서란?",
              lv:4,
            })
            p.type1!="「금융소비자 보호에 대한 법률」 <em>제 17조(적합성원칙) 및 제 18조(적정성원칙)</em>에 따라 귀하의 연령, 재산상황, 대출계약의 목적 등을 파악하여 대출계약자에게 가장 적합한 대출계약 체결을 권유하기 위한 기초자료로 활용됩니다."
          +textLists({
            type:'dot',
            lists:[
              {
                text:"허위 또는 불성실한 답변을 하시는 경우 부적합한 대출계약을 권유하게 될 수 있으며, 이로 인해 발생하는 모든 손해는 계약자 본인에게 귀속되오니 유념하여 주시기 바랍니다.",
              },
            ]
          })
          +button_bottom_fixed()
            +button({
              label:"다음",
              size:"large",
            })
        .step_cont(
          style="display:none;"
        )
          +title({
            text:"정보를 입력하세요.",
            lv:2,
          })
          +form()
            +form_body({title:"이름"})
              +form_value({
                value:"홍길동"
              })
            +form_body({title:"주민등록번호"})
              +input_idnumber()
            +form_body({title:"휴대폰번호"})
              +input_phone()
          +button_bottom_fixed()
            +button({
              label:"이전",
              type:"default",
              size:"large",
            })
            +button({
              label:"다음",
              size:"large",
            })
        .step_cont(
          style="display:;"
        )
          +title({
            text:"Q1.<br>귀하의 연령은 어떻게 되십니까?",
            lv:2,
          })
          +form()
            +form_body({message:{type:"error", text:"연령을 선택해 주세요."}})
              +radioCheck({
                type:"radio",
                name:'chk076916',
                lists:[
                  {
                    label:'20대 이하',
                  },
                  {
                    label:'30대'
                  },
                  {
                    label:'40대',
                    checked:true
                  },
                  {
                    label:'50대'
                  },
                  {
                    label:'50대 이상'
                  }
                ]
              })
          +button_bottom_fixed()
            +button({
              label:"이전",
              type:"default",
              size:"large",
            })
            +button({
              label:"다음",
              size:"large",
            })
        .step_cont(
          style="display:none;"
        )
          +title({
            text:"Q2.<br>귀하의 대출계약 체결의 목적은 무엇입니까?",
            lv:2,
          })
          +form()
            +form_body({message:{type:"error", text:"내용을 입력해 주세요"}})
              +radioCheck({
                type:"radio",
                name:'chk0769161',
                lists:[
                  {label:'가계자금',checked:true},
                  {label:'사업자금',},
                  {label:'주택자금',},
                  {label:'타 기관 대출금 상환',},
                  {label:'의료비',},
                  {label:'교육비',},
                  {label:'기타',},
                ]
              })
              +input({
                placeholder:"기타 선택 시 입력해 주세요"
              })
          +button_bottom_fixed()
            +button({
              label:"이전",
              type:"default",
              size:"large",
            })
            +button({
              label:"다음",
              size:"large",
            })
        .step_cont(
          style="display:none;"
        )
          +title({
            text:"Q3.<br>귀하의 연간 소득은 어느 정도입니까?",
            lv:2,
          })
          +form()
            +form_body({message:{type:"error", text:"소득을 선택해 주세요."}})
              +radioCheck({
                type:"radio",
                name:'chk076916',
                lists:[
                  {
                    label:'선택안함',
                    checked:true
                  },
                  {
                    label:'6백만원 이상 5천만원 미만'
                  },
                  {
                    label:'5천만원 이상 1억원 미만'
                  },
                  {
                    label:'1억원 이상'
                  },
                  {
                    label:'해당없음'
                  }
                ]
              })
              +input({
                placeholder:"해당없음 선택 시 입력해 주세요"
              })
          +text({
            type:'warning',
            text:"법인 조합 등의 경우, 제무상황 확인 등을 위해 회사의 회계정보 제출이 필요합니다."
          })
          +button_bottom_fixed()
            +button({
              label:"이전",
              type:"default",
              size:"large",
            })
            +button({
              label:"다음",
              size:"large",
            })
        .step_cont(
          style="display:none;"
        )
          +title({
            text:"Q4.<br>귀하의 총 자산규모(순자산)는 어느 정도입니까?",
            lv:2,
          })
