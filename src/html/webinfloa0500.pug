extends ../components/templates/base.pug

block prepend top 
  - mainClassName="webinf flex_top_bot"
  - pageTitle = "예적금담보대출"

block content
  +content_group(0)
    +result({
      type:'result',
      mainText:"김저축 님의<br>예적금담보대출신청이<br>완료되었습니다.",
      subText:"심사결과는 우리금융저축은행 담당자가<br>연락 드릴 예정입니다.<br>(고객센터 : <a href=\"tel:0000-0000\" class=\"underline\">0000-0000</a>)",
      img:"/src/images/img_check.svg",
    })
  +content_group(0)
    +title({
      text:"신청정보",
      lv:4,
    })
    +result({
      dataType:"line",
      data:[
        {
          title:"상품명",
          text:"예적금담보대출",
        },
        {
          title:"대출신청금액",
          text:"<em>5,000,000원</em>",
        },
        {
          title:"예상금리",
          text:"4.50%",
        },
      ]
    })
    +text({
      type:'link',
      text:"대출신청조회"
    })
  +text({
    type:'warning',
    text:"대출신청조회 메뉴를 통해 대출실행을 완료하실 수 있습니다.",
    className:"flex_bot"
  })
  +button_bottom_fixed()
    +button({
      label:"확인",
      size:"large",
    })
