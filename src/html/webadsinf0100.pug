extends ../components/templates/base.pug
block prepend top 
  - showBg = true;
  - mainClassName="webcom"
  - pageTitle = "추가인증서비스"

block content
  div.top_img
    img(src="/src/images/img_service.png", alt="")

  +title({
    text:'추가인증서비스란?',
    lv:2,
  })
  p.sub_txt 가입된 추가인증(전화승인/2채널 스마트폰 인증 등)을 통해야만 중요거래를 할 수 있는 보안서비스입니다.

  hr

  +title({
    text:'이용안내',
    lv:4,
  })

  +textLists({
    type:'dot',
    lists:[
      {
        text:"추가인증서비스를 이용하시기 전에 아래 이용안내 및 유의사항을 확인하시기 바랍니다",
        className:"list_txt",
      },
      {
        text:"인터넷뱅킹에서 서비스를 가입하실 수 있습니다.",
        className:"list_txt",
      }
      ,
      {
        text:"PC지정서비스와 추가인증서비스는 중복선택 가입이 가능하며, 중복선택 가입시 지정된 PC에서는 추가인증 없이 거래가능하며, 미지정된 PC에서는 추가인증만으로 이체가 가능합니다.",
        className:"list_txt",
      }
      ,
      {
        text:"가입 시에는 공인인증서가 필요하지 않습니다.",
        className:"list_txt",
      }
    ]
  })

  +title({
    text:'적용업무',
    lv:4,
  })

  +textLists({
    type:'dot',
    lists:[
      {
        text:"공인인증서 발급/재발급/타기관인증서 등록 및 인터넷뱅킹 이체거래에 적용됩니다.",
        className:"list_txt",
      },
      {
        text:"이체는 타인계좌로 이체가 가능한 즉시/다계좌/그룹/예약이체에 적용합니다.",
        className:"list_txt",
      },
      {
        text:"단, 1일 누계 100만원 이상 최초 이체 건부터 인증(예약이체 및 자동이체는 신청 시 금액과 상관없이 인증)",
        className:"list_txt",
      }
    ]
  })

  +title({
    text:'유의사항',
    lv:4,
  })

  +textLists({
    type:'dot',
    lists:[
      {
        text:"공인인증서 발급/재발급/타기관인증서 등록 및 인터넷뱅킹 이체거래 시 적용됩니다.",
        className:"list_txt",
      },
      {
        text:"인증서비스 신청시 인증에 실패하는 경우 거래제한이 발생할 수 있습니다.",
        className:"list_txt",
      },
      {
        text:"단, 1일 누계 100만원 이상 최초 이체 건부터 인증(예약이체 및 자동이체는 신청 시 금액과 상관없이 인증)하고, 1회 로그인 시 1회 인증 후 로그아웃까지 추가인증 없음",
        className:"list_txt",
      },
      {
        text:"월말 등 통신사 장애 시 인증번호 전송 지연으로 인한 서비스 제공 불가 시 당행은 책임을 지지 않습니다.",
        className:"list_txt",
      },
      {
        text:"해외에서 사용하시는 분들은 해당서비스를 가입하셔도 해당서비스에서 출국자정보 확인단계를 거친 후 인증 예외처리됩니다.",
        className:"list_txt",
      },
      {
        text:"서비스해지는 인터넷에서 가능합니다.",
        className:"list_txt",
      },
      {
        text:"다음의 번호가 포함될 경우 설정이 불가합니다.",
        className:"list_txt",
        subLists:{
          type:'hyphhen',
          lists:[
            {
              text:"주민등록번호 13자리 중 연속 6자리"
            },
            {
              text:"연속/동일한 숫자 6자리",
            },
            {
              text:"휴대폰번호 11자리 중 연속 6자리"
            },
          ]
        }
      }
    ]
  })