  - pageTitle = "금리인하요구권 조회/취소"

block content
  +title({
    text:"금리인하요구권 신청상세",
    lv:2,
  })

  +content_group(2)
    +result({
      dataType:"line",
      data:[
        {
          title:"대출상품",
          text:"직장인 신용대출",
        },
        {
          title:"대출계좌번호",
          text:"123-12-12-123456",
        },
        {
          title:"변경 전 금리",
          text:"3.16%",
        },
        {
          title:"변경 후 금리",
          text:"N%",
        },
        {
          title:"대출한도(잔액)",
          text:"20,000,000원",
        },
        {
          title:"대출일자",
          text:"2023.01.02",
        },
        {
          title:"만기일자",
          text:"2024.01.02",
        },
      ]
    })
    +text({
      type:'warning',
      text:"변경 후 금리는 금리인하심사완료 일자 기준이며 실제 약정체결 및 금리변경완료 시점의 기준금리 변동에 따라 적용금리는 달라질 수 있습니다.",
    })

    .agree_wrap
      +agree_box({
        text:"금리인하 신청 결과에 대하여 동의하시겠습니까?"
      })
      +radioCheck({
        name:'checklist',
        lists:[
          {
            label:'확인',
          }
        ]
      })
    
  +button_bottom_fixed()
    +button({
      label:"신청취소",
      size:"large",
    })