extends ../components/templates/base.pug

block prepend top 
  - mainClassName="webinf"
  - pageTitle = "대출한도조회"

block content
  .loan_wrap
    +title({
      text:"김중앙님의 위한<br>금리와 한도를 확인하시고<br>대출 신청 하세요.",
      lv:2,
    })
    +button_custom({
      type:"timeselect-24",
      label:"유효 시간 12:24:31"
    })
    .inf_card 
      a.card 
        dl
          dt 직장인 신용대출 
          dd 
            span.txt.arr_down 최저금리
            span.em 
              | 4.18
              span.sm %
      a.card 
        dl
          dt 사잇돌대출
          dd 
            span.txt.arr_up 최대한도
            span.em 
              | 8,000
              span.sm 만원
    //- +content_group(2)
    //-   .txt_link_wrap
    //-     a(href="").txt_link
    //-       em 재심사 요청하기
    hr
    +title({
      text:"대출 가능",
      lv:5,
    })
    .status
      .card_list
        a.card 
          dl
            dt 직장인 신용대출 
            dd 
              span.txt1 4.18%
              span.txt2 6,200만원
        a.card 
          dl
            dt 직장인 신용대출 
            dd 
              span.txt1 4.18%
              span.txt2 6,100만원
        a.card 
          dl
            dt 직장인 신용대출 111
            dd 
              span.txt1 4.18%
              span.txt2 6,000만원
        a.card 
          dl
            dt 직장인 신용대출 
            dd 
              span.txt1 4.18%
              span.txt2 6,000만원
        +button_more()
      +accordion({
        active:0
      })
        +acc_title('조회실패')
        +acc_content()
          .card_list
            .card.error
              p.title 사잇돌대출
        +acc_title('대출불가')
        +acc_content()
          .card_list
            .card.error
              dl
                dt 사잇돌대출
                dd 
                  span.error_msg 오류메세지 출력영역
      +content_group(2)
        .card_box_gray
          p <strong>다른 조건으로 조회해볼까요?</strong><br>조회 기록이 한번 더 발생합니다.
          +button({
            label:"다시 조회하기",
            size:"small",
            type:"darkgray-28",
          })
        .card_box_gray
          p <strong>대출 전문상담원이 연락드립니다.</strong><br>상담가능시간 09:00~18:00
          +button({
            label:"상담 신청하기",
            size:"small",
            type:"darkgray-28",
          })
  +collapse({
    className:"guide_text",
    isOpen:true,
  })
    +header()
      p.title 알아두세요
    +content()
      +textLists({
        type:'guide',
        lists:[
          {
            text:"저축은행대출금리와 한도는 입력하신 정보를 기준으로 각 저축은행에서 심사한 결과입니다.",
          },
          {
            text:"본 심사 시 확인되는 고객님의 실제소득, 재직업체, 거래 실적 등에 따라 금리와 한도가 달라지거나 대출이 거절되는 등 가 심사 결과와 달라질 수 있습니다.",
          },
          {
            text:"화면에 표시된 심사결과는 화면에 표시되는 유효시간동안 가능하며, 이후에는 다시 심사를 받아야 합니다.",
          },
          {
            text:"대출금리와 한도는 저축은행 심사 시점에 따라 달라질 수 있습니다.",
          },
        ]
      })