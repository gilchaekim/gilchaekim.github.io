extends ../components/templates/base.pug

block prepend top 
  - mainClassName="webauc"
  - pageTitle = "자동이체(당/타행)"

block content
  +title({
    text:"언제부터<br>언제까지 보낼까요?",
    lv:2,
  })
  +form()
    +form_body({title:"매월자동이체일자"})
      +button_select({
        label:"26일"
      })
      +radioCheck({
        name:'chk073306',
        label:"매월 말일이체"
      })
    +form_body({title:"이체시작일", tooltip:"이체가 시작되는 일자는 오늘 이후 영업일 기준 5일 이후부터 가능합니다."})
      +datepicker()
    +form_body({title:"이체종료일"})
      +datepicker()
    +form_body({title:"이체종료일", message:{type:"error", text:"자동이체 시작일과 종료일은 같을 수 없습니다."}})
      +datepicker()
  +collapse({
    className:"guide_text",
    isOpen:false,
  })
    +header()
      p.title 알아두세요
    +content()
      +textLists({
        type:'guide',
        lists:[
          {
            text:"고객님의 본인 소유 당/타행 출금계좌에서 자동이체(CMS)를 신청하는 서비스입니다.",
          },
          {
            text:"고객님의 당/타행 출금계좌의 예금주가 본인이 아닐 경우 계좌등록 할 수 없습니다.",
          },
          {
            text:"매월  이체 설정된 일자에 출금 또는 입금이 이루어집니다.",
          },
          {
            text:"자동이체업무상의 본인 소유 당행 출금계조하에서 타행 계좌로 입금하는 서비스와는 별개의 업무이오며, 궁금하신 사항은 당행에 문의하시길 바랍니다.",
          },
          {
            text:"은행별 평생계좌는 이용기관 CMS [타은행->저축은행 입금] 신규등록 할 수 없습니다.",
          },
        ]
      })
  +button_bottom_fixed()
    +button({
      label:"다음",
      size:"large",
    })
