extends ../components/templates/base.pug
block prepend top 
  - showBg = true;
  - mainClassName="login"
  - pageTitle = "뱅킹비밀번호 재등록"

block content
  +form()
    +form_body()
      +input({placeholder:"신규 비밀번호", title:"신규 비밀번호"})
      +input({placeholder:"신규 비밀번호 확인", title:"신규 비밀번호 확인"})
  +collapse({
    className:"guide_text",
    isOpen:true,
  })
    +header()
      p.title 안내사항
    +content()
      +textLists({
        type:'guide',
        lists:[
          {text:"영문자, 숫자, 특수문자가 혼용되어 최소 8자, 최대12자 이내로 작성되어야 합니다."},
          {text:"아이디와 4자리 이상 일치하는 비밀번호는 사용이 불가합니다."},
          {text:"고객정보(주민번호, 휴대폰번호, 전화번호 등)과 4자리 이상 일치하는 비밀번호는 사용이 불가합니다."},
        ]
      })
    
  .btn_wrap.fixed
    +button({
      label:"등록",
      size:"large",
    })

