extends ../components/templates/base.pug

block content
  +button({
    label:"전자금융사기예방서비스",
    muiToggle:'target:#fullLayer;'
  })
  +modal({ 
    title:"전자금융사기예방서비스",
    id:"fullLayer",
    type:"full",
    className:"webcom"
  })
    +title({
      text:'전자금융사기예방서비스',
      lv:2,
    })
    <!-- 2023.05.02 수정 [클래스수정 sub_txt > webcom_sub_txt] -->
    p.webcom_sub_txt 보이스피싱 등 금융사기 예방을 위해 감독기관의 정책에 따라 아래의 추가인증서비스 중 하나 이상을 가입하셔야  뱅킹서비스 이용이 가능합니다.
    
    +content_group(3)
      +button({
        label:"추가인증서비스 등록",
        size:'medium',
        type:"white"
      })
    +content_group(0)
      +title({
        text:'추가인증서비스(ARS, 스마트폰 앱 인증서비스)',
        lv:4,
      })

    +textLists({
      type:'dot',
      lists:[
        {
          text:"<strong>전화(ARS)승인서비스</strong>",
          className:"list_txt",
          subLists:{
            type:'hyphhen',
            lists:[
              {
                text:"회원정보 연락처에 등록된 전화가능 연락처를 이용하여 전화(ARS)를 통해 공인인증서 발급 등 인터넷뱅킹 이용이 가능한 서비스"
              }
            ]
          }
        },
        {
          text:"<strong>스마트폰 앱 인증서비스</strong>",
          className:"list_txt",
          subLists:{
            type:'hyphhen',
            lists:[
              {
                text:"회원정보 연락처에 등록된 본인 명의 스마트폰에서 스마트 2채널 인증 앱을 이용하여 인증한 후 공인인증서 발급 등 뱅킹서비스 이용이 가능한 서비스",
              }
            ]
          }
        }
      ]
    })

  script.
    GCui.modal('#fullLayer').show()