extends ../components/templates/base.pug
block prepend top 
  - mainClassName="webinf"
  - pageTitle = "대출한도조회"

block content
  +content_group(2)
    +title({
      text:"주민등록번호 뒷자리를<br>입력해주세요.",
      lv:2,
    })
    +content_group(4)
      +text({
        text:"신용 정보를 확인 위해 필요하며<br>한도 산출 목적으로만 사용합니다."
      })
  +content_group(2)
    +form()
      +form_body({title:"이름"})
        +input({
          placeholder:"이름 입력",
          value:"김저축"
        })
      +form_body({title:"주민등록번호"})
        +input_idnumber()
      +form_body({title:"소득구분"})
        +radioCheck({
          type:"radio",
          name:'chk881761',
          className:'button_type',
          lists:[
            {label:'개인근로자',checked:true},
            {label:'개인사업자',},
          ]
        })

  +button_bottom_fixed()
    +button({
      label:"다음",
      size:"large",
    })