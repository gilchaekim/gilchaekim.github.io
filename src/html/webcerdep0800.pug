extends ../components/templates/base.pug

block prepend top 
  - mainClassName="webcer"
  - pageTitle = "제증명 신청/발급"

block content
  +title({
    text:'예금잔액증명서(영문) 신청',
    lv:4,
  })

  +content_group(2)
    +form()
      +form_body({title:"이름"})
        +form_value({
          value:"방수현"
        })
      +form_body({title:"영문명", message:{type:"error", text:"영문명으로 입력해주세요."}})
        +input({
          placeholder:"영문명 입력"
        })
      +form_body({title:"증명서통화코드"})
        +button_select({
          placeholder:"선택",
        })
      +form_body({title:"발급기준일"})
        +form_value({
          value:"2023.04.04"
        })
      +form_body({title:"발급목적(사유)", message:{type:"error", text:"발급목적은 2~10자 이내로 입력해주세요."}})
        +button_select({
          placeholder:"선택",
          className:"form_normal"
        })
        <!-- 기타 선택시 노출 -->
        +input({
          placeholder:"2~10자 이내 입력"
        })
        <!-- //기타 선택시 노출 -->
      +form_body({title:"제증명발급장수"})
        +button_select({
          label:"1"
        })
      +form_body({title:"SMS수신여부"})
        +radioCheck({
          type:"radio",
          name:'radiolist',
          lists:[
            {
              label:'수신'
            },
            {
              label:'미수신',
              checked:true
            }
          ]
        })
      +form_body({title:"발금신청 계좌"})
        .check_card
          .all_check
            +radioCheck({
              name:'checklist',
              label:'전체 선택'
            })
          .selectlist_account
            +radioCheck({
              name:'checklist',
            })
              .lists
                strong 중앙정기예금
                span.acc_num 123-1212-1234-56
                  span.acc_aka 100,000원
            +radioCheck({
              name:'checklist',
            })
              .lists
                strong 중앙정기예금
                span.acc_num 123-1212-1234-56
                  span.acc_aka 100,000원
            +radioCheck({
              name:'checklist',
            })
              .lists
                strong 중앙정기예금
                span.acc_num 123-1212-1234-56
                  span.acc_aka 100,000원
    
    +collapse({
      className:"guide_text",
      isOpen:false,
    })
      +header()
        p.title 알아두세요
      +content()
        +textLists({
          type:'guide',
          lists:[
            {
              text:"발급기준일자를 현재일자로 등록하는 경우 발급처리 후 상환 처리할 수 없습니다."
            },
            {
              text:"발급기준일 당일은 자동이체를 포함한 입/출금 거래가 제한되오며, 계좌를 담보로 한 대출도 불가능 하오니 참고하여 주시기 바랍니다."
            },
            {
              text:"고객님의 예금등에 대해서 발급기준일자의 최종잔액을 증명할 수 있습니다."
            },
            {
              text:"아래와 같은 경우에는 가까운 영업점 방문 후 발급하시기 바랍니다.<br>- 신청 당일의 잔액기준일이 필요한 경우, 제3자에게 양도거래한 예금, 수익자를 타인으로 지정한 타인 신탁상품, PC환경 등 기타사유로 발급이 불가한 경우"
            },
          ]
        })

    +button_bottom_fixed()
      +button({
        label:"신청하기",
        size:"large",
      })