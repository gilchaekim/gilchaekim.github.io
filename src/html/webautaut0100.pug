extends ../components/templates/base.pug

block prepend top 
  - mainClassName="webauc"
  - pageTitle = "자동이체(당/타행)"

block content
  +content_group(1)
    +title({
      text:"어느 계좌에서 보낼까요?",
      lv:2,
    })
    +button_select_account()
  +content_group(1)
    +form()
      +form_body({title:"계좌 비밀번호"})
        +input({
          placeholder:"숫자 4자리",
          type:"password"
        })
  +collapse({
    className:"guide_text",
    isOpen:true,
  })
    +header()
      p.title 알아두세요
    +content()
      +textLists({
        type:'guide',
        
        lists:[
          {
            text:"고객님이 매월 정하신 일자에 당/타행의 계좌로 자동이체 시켜드리는 서비스입니다.",
          },
          {
            text:"저축은행내 자동이체 업무에는 보통예금 ->보통예금/적금/대출계좌, 정기예금이자->보통예금로 지정이 가능합니다.",
          },
          {
            text:"이체실행 중 최초 한번만 이체되며, 이체금액별 수수료가 발생할 수 있습니다.",
          }
        ]
      })
  +button_bottom_fixed()
    +button({
      label:"다음",
      size:"large",
    })