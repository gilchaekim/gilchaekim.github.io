extends ../components/templates/base.pug

block content
  +button({
    label:"팝업호출",
    muiToggle:'target:#fullLayer;'
  })
  +modal({
    id:"fullLayer",
    type:"bottom",
    title:"유의사항 확인"
  })
    .webpin
      .guide_wrap
        +text({
          text:"저축은행은 고객의 간편비밀번호를 저장하거나 보관하지 않으며, <strong>고객의 휴대폰 브라우저에 저장된 간편비밀번호 서비스를 제공</strong>하고 있습니다."
        })
        +text({
          text:"고객의 휴대폰 브라우저에 등록된 간편비밀번호는 반드시 본인의 것이어야 하며, 휴대폰 브라우저에 등록된 <strong>간편비밀번호의 관리 및 사용에 대한 책임은 본인에게 있으므로, 본인의 간편비밀번호가 유출되지 않도록 각별히 주의</strong>하시기 바랍니다."
        })
        +textLists({
          text:"만약 저장된 간편비밀번호가 <strong>타인에게 유출되었다고 판단 시 즉시 휴대폰 브라우저에 등록된 간편비밀번호를 해지</strong>하여야 합니다.",
          lists:[
            {
              type:"dot",
              text:"인증/보안 > 간편비밀번호 > 간편비밀번호해지",
            },
          ]
        })
        +text({
          text:"간편비밀번호를 통한 전자서명은 인증서를 제출한 것과 동일한 효력을 발생합니다."
        })
        +text({
          text:"다음의 경우 <strong>간편비밀번호가 자동해지 될 수 있으며, 재등록이 필요</strong>합니다."
        })
        +textLists({
          lists:[
            {
              text:"간편비밀번호를 5회 연속 틀린 경우"
            },
            {
              text:"휴대폰을 변경한 경우"
            },
            {
              text:"유효기간이 지난 경우 "
            },
          ]
        })
        +text({
          text:"다음의 번호가 포함될 경우 <strong>등록이 불가</strong>합니다."
        })
        +textLists({
          lists:[
            {
              text:"주민등록번호 13자리 중 연속 6자리"
            },
            {
              text:"연속/동일한 숫자 6자리"
            },
            {
              text:"휴대폰번호 11자리 중 연속 6자리"
            },
          ]
        })
        +content_group(1)
          +radioCheck({
            type:"checkbox",
            name:'chk688064',
            lists:[
              {
                label:'본인은 위의 유의사항을 모두 동의하고 확인했어요.'
              },
            ]
          })
    +button_bottom_fixed()
      +button({
        label:"다음",
        size:"large",
      })
        
  script.
    GCui.modal('#fullLayer').show()