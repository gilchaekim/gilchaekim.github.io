extends ../components/templates/base.pug

block prepend top 
  - mainClassName="webcer"
  - pageTitle = "제증명 신청/발급"

block content
  +title({
    text:'예금잔액증명서(한글) 신청',
    lv:4,
  })

  +content_group(2)
    +form()
      +form_body({title:"이름"})
        +form_value({
          value:"방수현"
        })
      +form_body({title:"발급기준일"})
        +form_value({
          value:"2023.04.04"
        })
      +form_body({title:"발급목적(사유)", message:{type:"error", text:"발급목적은 2~10자 이내로 입력해주세요."}})
        +button_select({
          placeholder:"선택",
          className:"form_normal"
        })
        <!-- 기타 선택시 노출 -->
        +input({
          placeholder:"2~10자 이내 입력"
        })
        <!-- //기타 선택시 노출 -->
      +form_body({title:"제증명발급장수"})
        +button_select({
          label:"1"
        })
      +form_body({title:"SMS수신여부"})
        +radioCheck({
          type:"radio",
          name:'radiolist',
          lists:[
            {
              label:'수신'
            },
            {
              label:'미수신',
              checked:true
            }
          ]
        })
      +form_body({title:"발금신청 계좌"})
        .check_card
          .all_check
            +radioCheck({
              name:'checklist',
              label:'전체 선택'
            })
          .selectlist_account
            +radioCheck({
              name:'checklist',
            })
              .lists
                strong 중앙정기예금
                span.acc_num 123-1212-1234-56
                  span.acc_aka 100,000원
            +radioCheck({
              name:'checklist',
            })
              .lists
                strong 중앙정기예금
                span.acc_num 123-1212-1234-56
                  span.acc_aka 100,000원
            +radioCheck({
              name:'checklist',
            })
              .lists
                strong 중앙정기예금
                span.acc_num 123-1212-1234-56
                  span.acc_aka 100,000원
        <!-- 발급신청 가능한 계좌가 없는 경우 -->
        +result({
          type:'null',
          mainText:"조회된 계좌가 없습니다.",
          img:"/src/images/ico_search_empty.svg",
        })
        <!-- //발급신청 가능한 계좌가 없는 경우 -->
  +collapse({
    className:"guide_text",
    isOpen:true,
  })
    +header()
      p.title 알아두세요
    +content()
      +textLists({
        type:'guide',
        lists:[
          {
            text:"고객님의 예금등에 대해서 발급기준일자의 최종잔액을 증명할 수 있습니다.",
          },
          {
            text:"아래와 같은 사유는 인터넷뱅킹으로 증명서 발급이 불가합니다. 가까운 영업점을 방문 후 발급하시기 바랍니다.",
            subLists:{
              type:'hyphhen',
              lists:[
                {
                  text:"개인회생, 파산, 기업회생 등의 용도로 발급을 원하는 경우 영업점을 방문하여 주시기 바랍니다."
                },
              ]
            }
          },
        ]
      })
  +button_bottom_fixed()
    +button({
      label:"신청하기",
      size:"large",
    })